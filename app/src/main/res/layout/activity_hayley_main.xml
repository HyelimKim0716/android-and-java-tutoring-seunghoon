<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".hayley.HayleyMainActivity">

    <Button
        android:id="@+id/hayleyMain_btnLinearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Button.CustomNormal"
        android:text="Linear Layout"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <Button
        android:id="@+id/hayleyMain_btnDataType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Button.CustomNormal"
        android:text="Data Type"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/hayleyMain_btnLinearLayout" />

    <Button
        android:id="@+id/hayleyMain_btnControl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Button.CustomNormal"
        android:text="Control"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/hayleyMain_btnDataType" />

    <Button
        android:id="@+id/hayleyMain_btnRepeat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Button.CustomNormal"
        android:text="Repeat"
        app:layout_constraintTop_toBottomOf="@id/hayleyMain_btnLinearLayout"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/hayleyMain_btnMethod"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Button.CustomNormal"
        android:text="Method"
        app:layout_constraintTop_toBottomOf="@id/hayleyMain_btnDataType"
        app:layout_constraintStart_toEndOf="@id/hayleyMain_btnRepeat" />

</android.support.constraint.ConstraintLayout>