<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".seunghoon.SeunghoonInterfaceActivity">

    <RelativeLayout
        android:id="@+id/sh_interface_rlTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <Button
            android:id="@+id/sh_interface_btnTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/sh_interface_btn_tv"
            android:text="ON"
            android:layout_marginLeft="10dp"/>
        <ImageView
            android:id="@+id/sh_interface_imgTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img_tv_off"
            android:layout_toRightOf="@+id/sh_interface_btnTv"
            android:scaleType="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>
        <TextView
            android:id="@+id/sh_interface_tvTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OFF"
            android:layout_toRightOf="@+id/sh_interface_btnTv"
            android:layout_marginTop="19dp"
            android:layout_marginLeft="29dp"
            android:textSize="19sp"
            android:textColor="@color/colorPrimaryDark"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/sh_interface_rlTv"
        android:layout_marginTop="20dp">

        <Button
            android:id="@+id/sh_interface_btnRadio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ON"
            android:background="@drawable/sh_interface_btn_radio"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"/>
        <ImageView
            android:id="@+id/sh_interface_imgRadio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img_radio_off"
            android:layout_toRightOf="@id/sh_interface_btnRadio"/>
        <TextView
            android:id="@+id/sh_interface_tvRadio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OFF"
            android:layout_toRightOf="@+id/sh_interface_btnRadio"
            android:layout_marginTop="19dp"
            android:layout_marginLeft="19dp"
            android:textColor="@color/white"
            android:textSize="19sp"
            android:textStyle="bold"/>
    </RelativeLayout>
</RelativeLayout>